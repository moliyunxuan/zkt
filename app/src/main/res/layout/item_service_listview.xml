<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:gravity="center"
    android:background="#FFF6F6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/service_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/yuan"
            android:text="全托管"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/service_price_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_name_list"
            android:layout_marginLeft="68dp"
            android:layout_marginTop="10dp"
            android:text="100¥/天"
            android:textColor="@color/green"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/service_content_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/service_price_list"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="包种植包采摘包配送"
            android:textColor="@color/gray2"
            android:textSize="11sp" />


    </RelativeLayout>

</RelativeLayout>