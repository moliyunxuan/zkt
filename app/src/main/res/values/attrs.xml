<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LeoTitleBar">
        <attr name="hl_background" format="color" />
        <attr name="hl_textTitleColor" format="color" />
        <attr name="hl_textTitleSize" format="integer" />
        <attr name="hl_textTitle" format="string" />
        <attr name="hl_showLeftBtn" format="boolean" />
        <attr name="hl_leftBtnDrawable" format="reference" />
        <attr name="hl_showRightText" format="string" />
        <attr name="hl_rightBtnDrawable" format="reference" />
        <attr name="hl_divideColor" format="color" />
        <attr name="hl_bold" format="boolean" />
    </declare-styleable>

    <!--自定义属性 -->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="NineGridLayout">
        <attr name="sapcing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="PraiseListView">
        <attr name="item_color" format="color" />
        <attr name="item_selector_color" format="color" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio" format="float" />
    </declare-styleable>

    <declare-styleable name="EnjoyshopToolBar">
        <attr name="rightButtonIcon" format="reference"/>
        <attr name="isShowSearchView" format="boolean"/>
        <attr name="isShowLeftIcon" format="boolean"/>
        <attr name="rightButtonText" format="string"/>
    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="radius" format="reference|dimension" />
    </declare-styleable>

    <declare-styleable name="SaleProgressView">
        <attr name="sideColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="sideWidth" format="dimension" />
        <attr name="overText" format="string" />
        <attr name="nearOverText" format="string" />
        <attr name="textSize" format="dimension" />
        <attr name="isNeedAnim" format="boolean" />
    </declare-styleable>

    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>



</resources>