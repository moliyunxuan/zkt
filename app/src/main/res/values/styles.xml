<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteFront_green_AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/black</item> <!-- 系统toolbar上的字体颜色值 -->
        <item name="colorPrimaryDark">@color/white</item>   <!-- 状态栏背景颜色 -->
        <item name="colorAccent">@color/colorPrimary</item>  <!-- 指的是手指按下，系统控件的颜色值 -->
        <item name="android:windowBackground">@color/white</item> <!-- 设置app背景颜色的默认值 -->
    </style>

    <style name="detail_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@mipmap/line_divide_vertical</item>
    </style>

    <style name="line">
        <item name="android:background">#f1f1f1</item>
    </style>

    <style name="editText_base">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">#a9b7b7</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>

    </style>


    <style name="line_vertical" parent="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="line_horizontal" parent="line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- 标题样式 -->
    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/title_bg</item>
    </style>

    <style name="left_title_style">
        <item name="android:onClick">back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">3dip</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 通用EditView样式 -->
    <style name="PublicEditViewStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:background">@drawable/public_corner_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FF606060</item>
        <item name="android:textColorHint">#e9e9e9</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingRight">6dip</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 仿IOS的dialog -->
    <style name="UIAlertViewStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="search_view">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:background">@drawable/selector_search_view</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- title底部边界线顏色 -->
    <style name="view_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#dddddd</item>
    </style>

    <!--popwidnow 显示消失动画 -->
    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_anim_enter_bottom</item> <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_anim_exit_bottom</item> <!-- 指定消失的动画xml -->
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>